@page
@model ContactModel
@{
    ViewData["Title"] = "Contact";
}
<br />
<style>
body {
  font-family: Arial, Helvetica, sans-serif;
  margin: 0;
}

html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

.column {
  float: left;
  width: 33.3%;
  margin-bottom: 16px;
  padding: 0 8px;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  margin: 8px;
}

.about-section {
  padding: 50px;
  text-align: center;
  background-color: #474e5d;
  color: white;
}

.container {
  padding: 0 16px;
}

.container::after, .row::after {
  content: "";
  clear: both;
  display: table;
}

.title {
  color: grey;
}

.button {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
}

.button:hover {
  background-color: #555;
}
</style>
<div class="about-section">
  <h1>Contact Us Page</h1>
  <p>You can reach us via following options.</p>
</div>

<h2 style="text-align:center">Our Team</h2>
<div class="row">
  <div class="column">
    <div class="card">
        <img src="https://www.freepnglogos.com/uploads/viber-png/call-contact-logo-media-message-social-viber-icon-19.png" alt="contact" />
      <div class="container">
        <h2>Phone</h2>
        <p>You can reach us via.</p>
        <p class="title">9876543210</p>
        <p><button class="button">Contact</button></p>
      </div>
    </div>
  </div>

  <div class="column">
    <div class="card">
        <img src="https://www.freepnglogos.com/uploads/silver-email-logo-png-5.png" alt = "email" />
      <div class="container">
        <h2>Email</h2>
        <p>You can mail us at.</p>
        <p class="title">pratik@demomail.com</p>
        <p><button class="button">Contact</button></p>
      </div>
    </div>
  </div>
  
  <div class="column">
    <div class="card">
      <img src="https://www.freepnglogos.com/uploads/logo-website-png/logo-website-website-icon-with-png-and-vector-format-for-unlimited-22.png" alt="website"/>
      <div class="container">
        <h2>Website</h2>
        <p>Visit our website.</p>
        <p class="title">www.demowebsite.com</p>
        <p><button class="button">Contact</button></p>
      </div>
    </div>
  </div>
</div>


